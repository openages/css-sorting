{
	"name": "css-sorting",
	"displayName": "CSS Sorting",
	"description": "VS Code plugin to sort CSS rules content with specified order.",
	"version": "4.0.0",
	"homepage": "https://github.com/openages/stk",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/openages/stk.git"
	},
	"license": "MIT",
	"publisher": "1yasa",
	"icon": "./icon.png",
	"keywords": ["postcss", "css", "sorting", "order", "rank"],
	"categories": ["Other"],
	"engines": {
		"vscode": "^1.22.0"
	},
	"vsce": {
		"baseImagesUrl": "./icon.png",
		"dependencies": true,
		"yarn": false
	},
	"activationEvents": ["onLanguage:css", "onLanguage:postcss", "onLanguage:less", "onLanguage:scss"],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "CSSSorting.execute",
				"title": "CSS Sorting: Run"
			}
		],
		"configuration": {
			"type": "object",
			"title": "â€‹CSS Sorting",
			"properties": {
				"CSSSorting.config": {
					"type": ["object", "string"],
					"default": {},
					"description": "Config object for CSS Sorting or path to config file.",
					"scope": "resource"
				},
				"CSSSorting.showErrorMessages": {
					"type": "boolean",
					"default": true,
					"description": "Show error messages or not. Will be automatically set to false if 'editor.formatOnSave' is enabled.",
					"scope": "resource"
				}
			}
		}
	},
	"dependencies": {
		"globby": "^14.0.1",
		"postcss": "^8.4.38",
		"postcss-sorting": "^8.0.2"
	},
	"devDependencies": {
		"@types/micromatch": "^4.0.7",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.12.7",
		"@types/proxyquire": "^1.3.31",
		"@vscode/vsce": "^2.26.0",
		"mocha": "^10.4.0",
		"proxyquire": "^2.1.3",
		"typescript": "^5.4.5",
		"vscode": "^1.1.37"
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"compile": "tsc",
		"package": "vsce package --no-dependencies",
		"publish": "vsce publish --no-dependencies",
		"help": "vsce ls",
		"build": "pnpm run compile && pnpm t && pnpm run package",
		"watch": "pnpm run compile --sourceMap --watch",
		"test": "mocha out/**/*.spec.js -s 0"
	}
}
