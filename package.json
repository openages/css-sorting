{
	"name": "css-sorting",
	"displayName": "CSS Sorting",
	"description": "VS Code plugin to sort CSS rules content with specified order.",
	"version": "4.0.2",
	"homepage": "https://github.com/openages/css-sorting",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/openages/css-sorting"
	},
	"license": "MIT",
	"publisher": "1yasa",
	"icon": "./icon.png",
	"keywords": ["postcss", "css", "csscomb", "sorting", "order", "rank"],
	"vsce": {
		"baseImagesUrl": "./icon.png",
		"dependencies": true,
		"yarn": false
	},
	"categories": ["Formatters"],
	"engines": {
		"vscode": "^1.60.0"
	},
	"activationEvents": ["onStartupFinished"],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "css_sorting.execute",
				"title": "CSS Sorting: Run"
			},
			{
				"command": "css_sorting.format",
				"title": "CSS Sorting: Format",
				"category": "_internal"
			},
			{
				"command": "css_sorting.dir",
				"title": "CSS Sorting: Files",
				"category": "_internal"
			},
			{
				"command": "css_sorting.file",
				"title": "CSS Sorting: File",
				"category": "_internal"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "css_sorting.format",
					"when": "editorTextFocus",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "css_sorting.dir",
					"when": "explorerResourceIsFolder",
					"group": "navigation"
				},
				{
					"command": "css_sorting.file",
					"when": "resourceExtname == .css",
					"group": "navigation"
				},
				{
					"command": "css_sorting.file",
					"when": "resourceExtname == .less",
					"group": "navigation"
				},
				{
					"command": "css_sorting.file",
					"when": "resourceExtname == .scss",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "â€‹CSS Sorting",
			"properties": {
				"CSSSorting.config": {
					"type": "object",
					"default": {},
					"description": "Config object for CSS Sorting or path to config file.",
					"scope": "resource",
					"properties": {
						"order": {
							"type": "array",
							"items": {
								"oneOf": [
									{
										"type": "string",
										"enum": [
											"custom-properties",
											"dollar-variables",
											"at-variables",
											"declarations",
											"at-rules",
											"rules"
										]
									},
									{
										"type": "object",
										"properties": {
											"type": {
												"type": "string",
												"enum": ["at-rule", "rule"]
											},
											"name": { "type": "string" },
											"selector": { "type": "string" },
											"hasBlock": { "type": "boolean" }
										},
										"required": ["type"]
									}
								]
							}
						},
						"properties-order": {
							"type": "array",
							"items": {
								"type": "string"
							}
						},
						"unspecified-properties-position": {
							"type": "string",
							"enum": ["top", "bottom"]
						}
					}
				}
			}
		}
	},
	"dependencies": {
		"fast-glob": "^3.3.2",
		"postcss": "^8.4.38",
		"postcss-sorting": "^8.0.2"
	},
	"devDependencies": {
		"@types/node": "^20.12.7",
		"@vscode/vsce": "^2.26.0",
		"typescript": "^5.4.5",
		"vscode": "^1.1.37"
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"compile": "tsc",
		"package": "vsce package",
		"publish": "vsce publish",
		"dev": "npm run compile --sourceMap --watch",
		"build": "npm run compile && npm run package"
	}
}
