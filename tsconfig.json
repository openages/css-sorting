{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "out",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"pretty": true,
		"removeComments": true,
		"declaration": false,
		"esModuleInterop": true
	}
}
