{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "dist",
		"forceConsistentCasingInFileNames": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"pretty": true,
		"removeComments": true,
		"declaration": false
	}
}
